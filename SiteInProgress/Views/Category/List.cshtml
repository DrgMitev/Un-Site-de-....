@model List<SiteInProgress.Category>

@{
    ViewBag.Title = "";
}
<body background="~/Content/background.jpg">
    <div class="container">
        <div class="well">
            <h2>All Categories - @Html.ActionLink("Create", "Create", "Category", null, new { @class = "btn btn-warning" })</h2>
            <div class="row">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr >
                                <td >@category.Id</td>
                                <td >@category.CategoryName</td>
                                <td >
                                    @Html.ActionLink("Edit", "Edit", "Category", new { @id = category.Id, @class = "my-class" }, null)
                                    @Html.ActionLink("Delete", "Delete", "Category", new { @id = category.Id, @class = "my-class"    }, null)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>