@model List<SiteInProgress.ImageGallery>
@{
    

}
<div class="jumbotron" col>
    <h1>BullShitSite</h1>
    <p class="lead">The first rakia trading site  !
    </p>
    <p><a href="https://youtu.be/Nf_Y4MbUCLY?t=36s" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<table>
    @{
        int j = 0;
        for (int i = Model.Count; i >= 0; i -= 4)
        {
            j = i;
            <tr>
                @* show 4 images in  a Row *@
                @while (j > i - 4 && j > 0)
                {

                    <td class="col-md-push-4"  style="padding-left:50 px">
                        <div class="col-lg-offset-2">
                            <form action="@Url.Action("GalleryEdit", "ImageGallery", new { id = Model[j-1].FileID })">
                                <input type="image" src="data:image/png;base64,@Convert.ToBase64String(Model[j-1].FileData,0,Model[j-1].FileData.Length)" width="300" height="300" style="padding-left:50 px"/>
                            </form>
                        </div>
                        <div>
                            <text class="col-lg-offset-2 col-md-push-4">@Model[j-1].Title </text>
                        </div>
                    </td>
                    j--;
                }
            </tr>
        }
    }
</table>